<div class="page-header">
  <h3>Transaction #<%= @transaction.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Description</dt>
      <dd><%= @transaction.description %></dd>

      <dt>Notes</dt>
      <dd><%= @transaction.notes %></dd>

      <dt>Currency</dt>
      <dd><%= @transaction.currency %></dd>

      <dt>Value</dt>
      <dd><%= @transaction.value %></dd>

      <dt>Payer</dt>
      <dd><%= @transaction.payer_id %></dd>

      <dt>Group</dt>
      <dd><%= @transaction.group_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/transactions" class="btn btn-primary">
        Back
      </a>
      <a href="/transactions/<%= @transaction.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_transaction/<%= @transaction.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
